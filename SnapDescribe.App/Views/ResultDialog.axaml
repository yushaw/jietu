<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="clr-namespace:Markdown.Avalonia;assembly=Markdown.Avalonia"
        xmlns:models="clr-namespace:SnapDescribe.App.Models"
        xmlns:controls="clr-namespace:SnapDescribe.App.Controls"
        x:Class="SnapDescribe.App.Views.ResultDialog"
        x:CompileBindings="False"
        Title="{DynamicResource Dialog.ResultTitle}"
        Width="900"
        Height="640"
        MinWidth="820"
        MinHeight="560"
        CanResize="True"
        WindowStartupLocation="CenterOwner">
    <Border Background="#F6F8FC" Padding="24">
        <Grid ColumnDefinitions="380,*" ColumnSpacing="24">
            <StackPanel Orientation="Vertical" Spacing="16">
                <Border Background="White"
                        CornerRadius="18"
                        Padding="18"
                        Height="450">
                    <Grid>
                        <!-- Regular image for non-OCR -->
                        <Image x:Name="PreviewImage"
                               Stretch="Uniform"
                               IsVisible="{Binding !SupportsOcr}" />

                        <!-- Interactive OCR canvas -->
                        <controls:OcrImageCanvas x:Name="OcrCanvas"
                                                  Image="{Binding Preview}"
                                                  Segments="{Binding OcrSegments}"
                                                  IsVisible="{Binding SupportsOcr}" />
                    </Grid>
                </Border>

                <Border Background="White"
                        CornerRadius="18"
                        Padding="18">
                    <StackPanel Spacing="10">
                        <TextBlock x:Name="TitleText"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#1F2433"
                                   Text="{DynamicResource Dialog.ScreenshotHeading}" />
                        <TextBlock x:Name="SubTitleText"
                                   FontSize="12"
                                   Foreground="#7A8199"
                                   Text="{DynamicResource Dialog.GeneratedAt}" />
                        <StackPanel Spacing="8">
                            <TextBlock Text="{DynamicResource Dialog.WindowTitle}"
                                       FontSize="12"
                                       Foreground="#7A8199" />
                            <TextBlock x:Name="WindowTitleValue"
                                       FontSize="13"
                                       Foreground="#2E3554"
                                       TextWrapping="Wrap" />
                            <TextBlock Text="{DynamicResource Dialog.ProcessName}"
                                       FontSize="12"
                                       Foreground="#7A8199"
                                       Margin="0,6,0,0" />
                            <TextBlock x:Name="ProcessNameValue"
                                       FontSize="13"
                                       Foreground="#2E3554"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                        <StackPanel Spacing="6"
                                    IsVisible="{Binding ShowPromptDetails}">
                            <TextBlock Text="{DynamicResource Dialog.PromptUsed}"
                                       FontSize="12"
                                       Foreground="#7A8199" />
                            <TextBlock Text="{Binding Prompt}"
                                       FontSize="13"
                                       Foreground="#2E3554"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                        <StackPanel Spacing="6"
                                    IsVisible="{Binding ShowOcrDetails}">
                            <TextBlock Text="{DynamicResource Dialog.OcrLanguages}"
                                       FontSize="12"
                                       Foreground="#7A8199" />
                            <TextBlock Text="{Binding OcrLanguages}"
                                       FontSize="13"
                                       Foreground="#2E3554"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="18"
                    Padding="18">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,1">
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                      VerticalScrollBarVisibility="Auto"
                                      IsVisible="{Binding SupportsChat}">
                            <ItemsControl ItemsSource="{Binding Conversation}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Spacing="10" Margin="18" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="models:ChatMessage">
                                        <Border CornerRadius="10"
                                                Padding="12"
                                                Background="{Binding Role, Converter={x:Static models:ChatMessageRoleToColorConverter.Instance}}"
                                                HorizontalAlignment="{Binding Role, Converter={x:Static models:ChatMessageRoleToAlignmentConverter.Instance}}">
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="{Binding DisplayRole}"
                                                           FontSize="12"
                                                           Foreground="#7A8199" />
                                                <TextBox Text="{Binding Content}"
                                                         FontSize="14"
                                                         Foreground="#1F2433"
                                                         TextWrapping="Wrap"
                                                         IsReadOnly="True"
                                                         Background="Transparent"
                                                         BorderThickness="0"
                                                         Padding="0"
                                                         MinHeight="20"
                                                         MaxWidth="520"
                                                         IsTabStop="False" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                      VerticalScrollBarVisibility="Auto"
                                      IsVisible="{Binding SupportsOcr}">
                            <Grid Margin="18,18,18,0">
                                <ItemsControl ItemsSource="{Binding OcrSegments}"
                                              IsVisible="{Binding HasOcrResults}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Spacing="8" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="models:OcrSegment">
                                            <Border CornerRadius="8"
                                                    Padding="12"
                                                    Background="#F9FAFB"
                                                    BorderBrush="#E5E7EB"
                                                    BorderThickness="1"
                                                    Cursor="Hand"
                                                    PointerPressed="OnOcrSegmentItemClicked">
                                                <Grid ColumnDefinitions="*,Auto">
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding Text}"
                                                               TextWrapping="Wrap"
                                                               FontSize="14"
                                                               Foreground="#1F2937"
                                                               VerticalAlignment="Center" />
                                                    <StackPanel Grid.Column="1"
                                                                Orientation="Horizontal"
                                                                Spacing="6"
                                                                Margin="12,0,0,0">
                                                        <TextBlock Text="{Binding Confidence, StringFormat={}{0:F1}%}"
                                                                   FontSize="11"
                                                                   Foreground="#6B7280"
                                                                   VerticalAlignment="Center" />
                                                        <Border Width="8"
                                                                Height="8"
                                                                CornerRadius="4"
                                                                VerticalAlignment="Center">
                                                            <Border.Background>
                                                                <SolidColorBrush Color="{Binding Confidence, Converter={x:Static models:ConfidenceToColorConverter.Instance}}" />
                                                            </Border.Background>
                                                        </Border>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <TextBlock Text="{DynamicResource Dialog.OcrEmpty}"
                                           Foreground="#6B7280"
                                           FontSize="13"
                                           Margin="0,20,0,0"
                                           HorizontalAlignment="Center"
                                           IsVisible="{Binding NoOcrResults}" />
                            </Grid>
                        </ScrollViewer>

                        <Border x:Name="LoadingPanel"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top"
                                Margin="0"
                                Padding="12,10"
                                Background="#EEF2FF"
                                CornerRadius="0,0,12,12"
                                IsVisible="False">
                            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                                <ProgressBar IsIndeterminate="True" Width="140" Height="6" />
                                <TextBlock Text="{DynamicResource Dialog.Loading}"
                                           FontSize="12"
                                           Foreground="#394264"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Grid x:Name="ChatContainer" Grid.Row="1" ColumnDefinitions="*,Auto" Background="#F8FAFF" Margin="0" Height="90" IsVisible="{Binding SupportsChat}">
                        <TextBox x:Name="ChatInput"
                                 Grid.Column="0"
                                 Watermark="{DynamicResource Watermark.ChatInput}"
                                 AcceptsReturn="True"
                                 Margin="14,14,10,14"
                                 TextWrapping="Wrap"
                                 Padding="12"
                                 MaxLength="800" />
                        <Button x:Name="SendButton"
                                Grid.Column="1"
                                Classes="primary"
                                Content="{DynamicResource Button.Send}"
                                Padding="18,12"
                                Width="120"
                                Margin="0,14,14,14" />
                    </Grid>

                    <Border x:Name="OcrActions"
                            Grid.Row="1"
                            Background="#F8FAFF"
                            Padding="18,14"
                            IsVisible="{Binding SupportsOcr}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Button Content="{DynamicResource Button.CopyAll}"
                                    Classes="primary"
                                    Click="OnCopyAllClicked"
                                    IsEnabled="{Binding HasOcrResults}" />
                            <TextBlock Text="{DynamicResource Dialog.OcrCopyHint}"
                                       Foreground="#6B7280"
                                       FontSize="12"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
