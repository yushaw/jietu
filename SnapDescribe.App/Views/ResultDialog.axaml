<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="clr-namespace:Markdown.Avalonia;assembly=Markdown.Avalonia"
        xmlns:models="clr-namespace:SnapDescribe.App.Models"
        x:Class="SnapDescribe.App.Views.ResultDialog"
        x:CompileBindings="False"
        Title="{DynamicResource Dialog.ResultTitle}"
        Width="900"
        Height="640"
        MinWidth="820"
        MinHeight="560"
        CanResize="True"
        WindowStartupLocation="CenterOwner">
    <Border Background="#F6F8FC" Padding="24">
        <Grid ColumnDefinitions="300,*" ColumnSpacing="24">
            <StackPanel Orientation="Vertical" Spacing="16">
                <Border Background="White"
                        CornerRadius="18"
                        Padding="18">
                    <StackPanel Spacing="10">
                        <Image x:Name="PreviewImage"
                               Stretch="Uniform"
                               Height="200" />
                        <TextBlock x:Name="TitleText"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#1F2433"
                                   Text="{DynamicResource Dialog.ScreenshotHeading}" />
                        <TextBlock x:Name="SubTitleText"
                                   FontSize="12"
                                   Foreground="#7A8199"
                                   Text="{DynamicResource Dialog.GeneratedAt}" />
                        <StackPanel Spacing="8">
                            <TextBlock Text="{DynamicResource Dialog.WindowTitle}"
                                       FontSize="12"
                                       Foreground="#7A8199" />
                            <TextBlock x:Name="WindowTitleValue"
                                       FontSize="13"
                                       Foreground="#2E3554"
                                       TextWrapping="Wrap" />
                            <TextBlock Text="{DynamicResource Dialog.ProcessName}"
                                       FontSize="12"
                                       Foreground="#7A8199"
                                       Margin="0,6,0,0" />
                            <TextBlock x:Name="ProcessNameValue"
                                       FontSize="13"
                                       Foreground="#2E3554"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                        <StackPanel Spacing="6">
                            <TextBlock Text="{DynamicResource Dialog.PromptUsed}"
                                       FontSize="12"
                                       Foreground="#7A8199" />
                            <TextBlock Text="{Binding Prompt}"
                                       FontSize="13"
                                       Foreground="#2E3554"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="18"
                    Padding="18">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                          Margin="0,0,0,1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Conversation}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Spacing="10" Margin="18" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:ChatMessage">
                                    <Border CornerRadius="10"
                                            Padding="12"
                                            Background="{Binding Role, Converter={x:Static models:ChatMessageRoleToColorConverter.Instance}}"
                                            HorizontalAlignment="{Binding Role, Converter={x:Static models:ChatMessageRoleToAlignmentConverter.Instance}}">
                                        <StackPanel Spacing="4">
                                            <TextBlock Text="{Binding DisplayRole}"
                                                       FontSize="12"
                                                       Foreground="#7A8199" />
                                            <TextBox Text="{Binding Content}"
                                                     FontSize="14"
                                                     Foreground="#1F2433"
                                                     TextWrapping="Wrap"
                                                     IsReadOnly="True"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     Padding="0"
                                                     MinHeight="20"
                                                     MaxWidth="520"
                                                     IsTabStop="False" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <Border x:Name="LoadingPanel"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Margin="0"
                            Padding="12,10"
                            Background="#EEF2FF"
                            CornerRadius="0,0,12,12"
                            IsVisible="False">
                        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" Width="140" Height="6" />
                            <TextBlock Text="{DynamicResource Dialog.Loading}"
                                       FontSize="12"
                                       Foreground="#394264"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </Grid>

                    <Grid x:Name="ChatContainer" Grid.Row="1" ColumnDefinitions="*,Auto" Background="#F8FAFF" Margin="0" Height="90">
                        <TextBox x:Name="ChatInput"
                                 Grid.Column="0"
                                 Watermark="{DynamicResource Watermark.ChatInput}"
                                 AcceptsReturn="True"
                                 Margin="14,14,10,14"
                                 TextWrapping="Wrap"
                                 Padding="12"
                                 MaxLength="800" />
                        <Button x:Name="SendButton"
                                Grid.Column="1"
                                Classes="primary"
                                Content="{DynamicResource Button.Send}"
                                Padding="18,12"
                                Width="120"
                                Margin="0,14,14,14" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
