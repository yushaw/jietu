<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:md="clr-namespace:Markdown.Avalonia;assembly=Markdown.Avalonia"
        xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="SnapDescribe.App.Views.MainWindow"
        x:CompileBindings="False"
        Title="SnapDescribe"
        Width="980"
        Height="680"
        MinWidth="900"
        MinHeight="600"
        WindowStartupLocation="CenterScreen">
    <Border Background="#F4F6FB">
        <Grid Margin="18">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
                  ColumnDefinitions="*,Auto"
                  Margin="0,0,0,20">
                <TextBlock Grid.Column="0"
                           Text="{DynamicResource App.Header}"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="#1F2433"
                           VerticalAlignment="Center" />
                <Border Grid.Column="1"
                        Background="#E7ECF8"
                        CornerRadius="999"
                        Padding="10,4"
                        VerticalAlignment="Center"
                        IsVisible="{Binding HasStatusMessage}">
                    <TextBlock Text="{Binding StatusMessage}"
                               FontSize="13"
                               Foreground="#334155" />
                </Border>
            </Grid>

            <TabControl Grid.Row="1"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Padding="0">
                <TabItem Header="{DynamicResource Tab.Workbench}">
                    <Grid RowDefinitions="Auto,*"
                          RowSpacing="14">
                        <Border Padding="20"
                                Background="White"
                                CornerRadius="18">
                            <Grid ColumnDefinitions="Auto,*,Auto"
                                  ColumnSpacing="24"
                                  VerticalAlignment="Center">
                                <Button Grid.Column="0"
                                        MinWidth="150"
                                        MinHeight="44"
                                        Classes="primary"
                                        FontSize="17"
                                        FontWeight="SemiBold"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Content="{DynamicResource Button.Capture}"
                                        Command="{Binding CaptureCommand}" />

                                <StackPanel Grid.Column="1"
                                            Orientation="Vertical"
                                            Spacing="6"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{DynamicResource Label.CaptureHint}"
                                               FontSize="12"
                                               Foreground="#687089" />
                                </StackPanel>

                                <Border Grid.Column="2"
                                        Background="#EFF2FB"
                                        CornerRadius="12"
                                        Padding="10,8">
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="6"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="{DynamicResource Label.CurrentHotkey}"
                                                   FontSize="12"
                                                   Foreground="#6B7280" />
                                        <TextBlock Text="{Binding Settings.CaptureHotkey.Shortcut}"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   Foreground="#111827" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>

                        <Border Grid.Row="1"
                                Background="White"
                                CornerRadius="18"
                                Padding="20">
                            <Grid ColumnDefinitions="300,*"
                                  ColumnSpacing="20">
                                <StackPanel Grid.Column="0" Spacing="10">
                                    <TextBlock Text="{DynamicResource Label.HistoryTitle}"
                                               FontWeight="SemiBold"
                                               FontSize="16"
                                               Foreground="#1F2433" />
                                    <TextBlock Text="{DynamicResource Label.HistorySubtitle}"
                                               FontSize="12"
                                               Foreground="#7A8199" />
                                    <Border Margin="0,10,0,0"
                                            Background="#F8FAFF"
                                            BorderBrush="#E2E8F6"
                                            BorderThickness="1"
                                            CornerRadius="14"
                                            Padding="6">
                                        <ListBox x:Name="HistoryList"
                                                 ItemsSource="{Binding History}"
                                                 SelectedItem="{Binding SelectedRecord}"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                 MaxHeight="420">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Padding="10"
                                                            Margin="0,0,0,8"
                                                            Background="White"
                                                            BorderBrush="#D9E1F6"
                                                            BorderThickness="1"
                                                            CornerRadius="10">
                                                        <StackPanel Spacing="4">
                                                            <TextBlock Text="{Binding DisplayTitle}"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="#1F2433" />
                                                            <TextBlock Text="{Binding DisplayContext}"
                                                                       FontSize="12"
                                                                       Foreground="#6B7280"
                                                                       TextWrapping="Wrap" />
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Border>

                                </StackPanel>

                                <Border Grid.Column="1"
                                        Background="#F8FAFF"
                                        CornerRadius="18"
                                        Padding="16"
                                        BorderBrush="#E2E8F6"
                                        BorderThickness="1"
                                        MinHeight="360">
                                    <Image Source="{Binding PreviewImage}"
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           MaxWidth="540"
                                           MaxHeight="420" />
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>

                <TabItem Header="{DynamicResource Tab.Settings}">
                    <TabControl Margin="0,6,0,0"
                                 Background="Transparent"
                                 BorderBrush="Transparent"
                                 Padding="0">
                        <TabItem Header="{DynamicResource Tab.BasicSettings}">
                            <ScrollViewer>
                                <StackPanel Spacing="16">
                                    <Border Background="White"
                                            CornerRadius="18"
                                            Padding="22">
                                        <StackPanel Spacing="16">
                                            <TextBlock Text="{DynamicResource Section.ApiConfig}"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"
                                                       Foreground="#1F2433" />
                                            <Grid ColumnDefinitions="160,*"
                                                  RowDefinitions="Auto,Auto,Auto"
                                                  RowSpacing="12"
                                                  ColumnSpacing="12">
                                                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="{DynamicResource Label.BaseUrl}" />
                                                <TextBox x:Name="BaseUrlTextBox"
                                                         Grid.Row="0"
                                                         Grid.Column="1"
                                                         Text="{Binding Settings.BaseUrl, UpdateSourceTrigger=PropertyChanged}"
                                                         Watermark="https://open.bigmodel.cn/api/paas/v4/" />

                                                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="{DynamicResource Label.ModelName}" />
                                                <TextBox x:Name="ModelTextBox"
                                                         Grid.Row="1"
                                                         Grid.Column="1"
                                                         Text="{Binding Settings.Model, UpdateSourceTrigger=PropertyChanged}" />

                                                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="API Key" />
                                                <TextBox x:Name="ApiKeyTextBox"
                                                         Grid.Row="2"
                                                         Grid.Column="1"
                                                         Text="{Binding Settings.ApiKey, UpdateSourceTrigger=PropertyChanged}" />
                                            </Grid>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="White"
                                            CornerRadius="12"
                                            Padding="20"
                                            Classes="card">
                                        <StackPanel Spacing="14">
                                            <TextBlock Text="{DynamicResource Section.CaptureAndStorage}"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"
                                                       Foreground="#1F2433" />
                                            <Grid ColumnDefinitions="160,*"
                                                  RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                                                  RowSpacing="12"
                                                  ColumnSpacing="12">
                                                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="{DynamicResource Label.DefaultPrompt}" />
                                                <TextBox x:Name="DefaultPromptTextBox"
                                                         Grid.Row="0"
                                                         Grid.Column="1"
                                                         TextWrapping="Wrap"
                                                         AcceptsReturn="True"
                                                         Height="68"
                                                         Text="{Binding Settings.DefaultPrompt, UpdateSourceTrigger=PropertyChanged}" />

                                                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="{DynamicResource Label.CaptureHotkey}" />
                                                <TextBox x:Name="HotkeyTextBox"
                                                         Grid.Row="1"
                                                         Grid.Column="1"
                                                         IsReadOnly="True"
                                                         Text="{Binding Settings.CaptureHotkey.Shortcut}" />

                                                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="{DynamicResource Label.InterfaceLanguage}" />
                                                <ComboBox x:Name="LanguageComboBox"
                                                          Grid.Row="2"
                                                          Grid.Column="1"
                                                          Width="180">
                                                    <ComboBoxItem Content="{DynamicResource Language.Chinese}" Tag="zh-CN" />
                                                    <ComboBoxItem Content="{DynamicResource Language.English}" Tag="en-US" />
                                                </ComboBox>

                                                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="{DynamicResource Label.OutputDirectory}" />
                                                <StackPanel Grid.Row="3"
                                                            Grid.Column="1"
                                                            Orientation="Horizontal"
                                                            Spacing="8">
                                                    <TextBox x:Name="OutputDirectoryTextBox"
                                                             Width="360"
                                                             Text="{Binding Settings.OutputDirectory, UpdateSourceTrigger=PropertyChanged}" />
                                                    <Button x:Name="BrowseFolderButton"
                                                            Classes="outline"
                                                            Content="{DynamicResource Button.Browse}" />
                                                </StackPanel>

                                                <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="{DynamicResource Label.HistoryLimit}" />
                                                <StackPanel Grid.Row="4"
                                                            Grid.Column="1"
                                                            Orientation="Horizontal"
                                                            Spacing="8">
                                                    <TextBox x:Name="HistoryLimitTextBox"
                                                             Width="80"
                                                             Text="{Binding Settings.HistoryLimit, UpdateSourceTrigger=PropertyChanged}" />
                                                    <Button Content="{DynamicResource Button.RefreshDirectory}"
                                                            Classes="outline"
                                                            Command="{Binding RefreshOutputFolderCommand}" />
                                                </StackPanel>

                                                <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="{DynamicResource Label.OcrDataPath}" />
                                                <StackPanel Grid.Row="5"
                                                            Grid.Column="1"
                                                            Orientation="Horizontal"
                                                            Spacing="8">
                                                    <TextBox x:Name="OcrDataPathTextBox"
                                                             Width="360"
                                                             Text="{Binding Settings.OcrTessDataPath, UpdateSourceTrigger=PropertyChanged}" />
                                                    <TextBlock Text="{DynamicResource Hint.OcrDataPath}"
                                                               FontSize="11"
                                                               Foreground="#9CA3AF"
                                                               VerticalAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Width="220" />
                                                </StackPanel>

                                                <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="{DynamicResource Label.LaunchOnStartup}" />
                                                <CheckBox x:Name="LaunchOnStartupCheckBox"
                                                          Grid.Row="6"
                                                          Grid.Column="1"
                                                          Content="{DynamicResource Checkbox.Enable}"
                                                          IsChecked="{Binding Settings.LaunchOnStartup, Mode=TwoWay}" />

                                                <Button Grid.Row="7"
                                                        Grid.Column="1"
                                                        Classes="primary"
                                                        Content="{DynamicResource Button.SaveSettings}"
                                                        Command="{Binding SaveSettingsCommand}"
                                                        HorizontalAlignment="Left" />
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="{DynamicResource Tab.Agents}"
                                 DataContext="{Binding AgentSettingsEditor}">
                            <Grid RowDefinitions="*,Auto"
                                  RowSpacing="16">
                                <Grid ColumnDefinitions="260,*"
                                      ColumnSpacing="16">
                                    <StackPanel Spacing="12">
                                        <TextBlock Text="{DynamicResource Agent.ConfigHint}"
                                                   FontSize="12"
                                                   Foreground="#7A8199"
                                                   TextWrapping="Wrap" />
                                        <CheckBox Content="{DynamicResource Agent.EnableToggle}"
                                                  IsChecked="{Binding Agent.IsEnabled, Mode=TwoWay}" />
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <Button Content="{DynamicResource Agent.AddProfile}"
                                                    Command="{Binding AddProfileCommand}" />
                                            <Button Content="{DynamicResource Agent.DuplicateProfile}"
                                                    Command="{Binding DuplicateProfileCommand}" />
                                            <Button Content="{DynamicResource Agent.RemoveProfile}"
                                                    Command="{Binding RemoveProfileCommand}" />
                                        </StackPanel>
                                        <ListBox ItemsSource="{Binding Agent.Profiles}"
                                                 SelectedItem="{Binding SelectedProfile, Mode=TwoWay}"
                                                 MinHeight="320">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Spacing="2">
                                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                                        <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#6B7280" TextWrapping="Wrap" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </StackPanel>

                                    <Border Grid.Column="1"
                                            Background="White"
                                            CornerRadius="16"
                                            Padding="18">
                                        <StackPanel Spacing="12">
                                            <StackPanel Orientation="Vertical" Spacing="6">
                                                <TextBlock Text="{DynamicResource Agent.ToolDetailHeading}"
                                                           FontWeight="SemiBold" />
                                                <TextBlock Text="{DynamicResource Agent.ProfileDetailHint}"
                                                           FontSize="12"
                                                           Foreground="#7A8199"
                                                           TextWrapping="Wrap" />
                                            </StackPanel>
                                            <StackPanel Orientation="Vertical" Spacing="6">
                                                <TextBlock Text="{DynamicResource Agent.ProfileName}" />
                                                <TextBox Text="{Binding SelectedProfile.Name, Mode=TwoWay}" />
                                            </StackPanel>
                                            <StackPanel Orientation="Vertical" Spacing="6">
                                                <TextBlock Text="{DynamicResource Agent.ProfileDescription}" />
                                                <TextBox Text="{Binding SelectedProfile.Description, Mode=TwoWay}" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Spacing="16">
                                                <CheckBox Content="{DynamicResource Agent.RunToolsBeforeModel}"
                                                          IsChecked="{Binding SelectedProfile.RunToolsBeforeModel, Mode=TwoWay}" />
                                                <CheckBox Content="{DynamicResource Agent.IncludeToolOutput}"
                                                          IsChecked="{Binding SelectedProfile.IncludeToolOutputInResponse, Mode=TwoWay}" />
                                            </StackPanel>
                                            <StackPanel Orientation="Vertical" Spacing="6">
                                                <TextBlock Text="{DynamicResource Agent.SystemPromptLabel}" />
                                                <TextBox Text="{Binding SelectedProfile.SystemPrompt, Mode=TwoWay}"
                                                         AcceptsReturn="True"
                                                         Height="140"
                                                         TextWrapping="Wrap"
                                                         Padding="8"
                                                         Watermark="{DynamicResource Agent.SystemPromptHint}" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <Button Content="{DynamicResource Agent.AddTool}"
                                                        Command="{Binding AddToolCommand}" />
                                                <Button Content="{DynamicResource Agent.DuplicateTool}"
                                                        Command="{Binding DuplicateToolCommand}" />
                                                <Button Content="{DynamicResource Agent.RemoveTool}"
                                                        Command="{Binding RemoveToolCommand}" />
                                            </StackPanel>
                                            <ListBox ItemsSource="{Binding SelectedProfile.Tools}"
                                                     SelectedItem="{Binding SelectedTool, Mode=TwoWay}"
                                                     MinHeight="220">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                                            <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#6B7280" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                            <StackPanel Orientation="Vertical" Spacing="6">
                                                <TextBlock Text="{DynamicResource Agent.ToolCommandLabel}" />
                                                <TextBox Text="{Binding SelectedTool.Command, Mode=TwoWay}" />
                                            </StackPanel>
                                            <StackPanel Orientation="Vertical" Spacing="6">
                                                <TextBlock Text="{DynamicResource Agent.ToolArguments}" />
                                                <TextBox Text="{Binding SelectedTool.ArgumentsTemplate, Mode=TwoWay}"
                                                         Watermark="{DynamicResource Agent.ToolArgumentsHint}" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Spacing="16">
                                                <StackPanel Width="200" Spacing="6">
                                                    <TextBlock Text="{DynamicResource Agent.ToolTimeoutLabel}" />
                                                    <controls:NumericUpDown Minimum="5"
                                                                            Maximum="600"
                                                                            Value="{Binding SelectedTool.TimeoutSeconds, Mode=TwoWay}" />
                                                </StackPanel>
                                                <CheckBox Content="{DynamicResource Agent.ToolAutoRun}"
                                                          IsChecked="{Binding SelectedTool.AutoRun, Mode=TwoWay}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <StackPanel Grid.Row="1"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            Spacing="10">
                                    <Button Content="{DynamicResource Agent.Reset}"
                                            Command="{Binding ResetCommand}" />
                                    <Button Content="{DynamicResource Agent.Save}"
                                            Command="{Binding SaveCommand}"
                                            Classes="primary"
                                            IsEnabled="{Binding IsDirty}" />
                                </StackPanel>
                            </Grid>
                        </TabItem>

                        <TabItem Header="{DynamicResource Tab.PromptRules}">
                            <Grid ColumnDefinitions="300,*"
                                  ColumnSpacing="16">
                                <StackPanel Grid.Column="0"
                                            Spacing="12">
                                    <Border Background="White"
                                            CornerRadius="18"
                                            Padding="20">
                                            <StackPanel Spacing="12">
                                            <TextBlock Text="{DynamicResource Label.RuleList}"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Foreground="#1F2433" />
                                            <TextBlock Text="{DynamicResource Label.RuleListHint}"
                                                       FontSize="12"
                                                       Foreground="#7A8199" />
                                            <WrapPanel ItemSpacing="8">
                                                <Button Content="{DynamicResource Button.AddRule}"
                                                        Classes="primary"
                                                        Command="{Binding AddPromptRuleCommand}" />
                                                <Button Content="{DynamicResource Button.DeleteRule}"
                                                        Classes="outline"
                                                        Command="{Binding RemovePromptRuleCommand}" />
                                                <Button Content="{DynamicResource Button.MoveUp}"
                                                        Classes="outline"
                                                        Padding="8,6"
                                                        FontSize="12"
                                                        Command="{Binding MovePromptRuleUpCommand}" />
                                                <Button Content="{DynamicResource Button.MoveDown}"
                                                        Classes="outline"
                                                        Padding="8,6"
                                                        FontSize="12"
                                                        Command="{Binding MovePromptRuleDownCommand}" />
                                            </WrapPanel>
                                            <ListBox ItemsSource="{Binding Settings.PromptRules}"
                                                     SelectedItem="{Binding SelectedPromptRule}"
                                                     Background="#F7F9FF"
                                                     BorderBrush="#E2E8F6"
                                                     Margin="0,10,0,0"
                                                     Height="420">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="Transparent"
                                                                Padding="12"
                                                                CornerRadius="10">
                                                            <StackPanel Spacing="4">
                                                                <TextBlock Text="{Binding ProcessName}"
                                                                           FontWeight="SemiBold"
                                                                           Foreground="#1F2937" />
                                                                <TextBlock Text="{Binding WindowTitle}"
                                                                           FontSize="12"
                                                                           Foreground="#6B7280"
                                                                           TextWrapping="Wrap" />
                                                                <TextBlock Text="{Binding Prompt}"
                                                                           FontSize="12"
                                                                           Foreground="#4B5563"
                                                                           TextWrapping="Wrap"
                                                                           MaxHeight="72" />
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <Border Grid.Column="1"
                                        Background="White"
                                        CornerRadius="18"
                                        Padding="22">
                                    <Grid RowDefinitions="Auto,*"
                                          RowSpacing="12">
                                        <StackPanel Spacing="6">
                                            <TextBlock Text="{DynamicResource Label.RuleDetails}"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Foreground="#1F2433" />
                                            <TextBlock Text="{DynamicResource Label.RuleDetailsHint}"
                                                       FontSize="12"
                                                       Foreground="#7A8199" />
                                        </StackPanel>

                                        <Grid Grid.Row="1"
                                              ColumnDefinitions="160,*"
                                              RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                                              RowSpacing="12"
                                              ColumnSpacing="12">
                                            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="{DynamicResource Label.ProcessName}" />
                                            <TextBox Grid.Row="0"
                                                     Grid.Column="1"
                                                     Text="{Binding SelectedPromptRule.ProcessName, UpdateSourceTrigger=PropertyChanged}"
                                                     Watermark="{DynamicResource Watermark.ProcessName}"
                                                     IsEnabled="{Binding HasSelectedPromptRule}" />

                                            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="{DynamicResource Label.WindowTitle}" />
                                            <TextBox Grid.Row="1"
                                                     Grid.Column="1"
                                                     Text="{Binding SelectedPromptRule.WindowTitle, UpdateSourceTrigger=PropertyChanged}"
                                                     Watermark="{DynamicResource Watermark.WindowTitle}"
                                                     IsEnabled="{Binding HasSelectedPromptRule}" />

                                            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="{DynamicResource Label.Capability}" />
                                            <StackPanel Grid.Row="2"
                                                        Grid.Column="1"
                                                        Orientation="Vertical"
                                                        Spacing="6">
                                                <ComboBox ItemsSource="{Binding CapabilityOptions}"
                                                          SelectedItem="{Binding SelectedCapabilityOption}"
                                                          IsEnabled="{Binding HasSelectedPromptRule}">
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding DisplayName}" />
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>
                                                <TextBlock Text="{DynamicResource Capability.PlaceholderHint}"
                                                           FontSize="12"
                                                           Foreground="#7A8199"
                                                           IsVisible="{Binding ShowCapabilityPlaceholder}" />
                                            </StackPanel>

                                            <StackPanel Grid.Row="3"
                                                        Grid.Column="1"
                                                        Spacing="10"
                                                        IsVisible="{Binding ShowCapabilityParameters}">
                                                <ItemsControl ItemsSource="{Binding SelectedPromptRule.Parameters}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid ColumnDefinitions="150,*,Auto"
                                                                  ColumnSpacing="8">
                                                                <TextBox Grid.Column="0"
                                                                         Text="{Binding Key, UpdateSourceTrigger=PropertyChanged}"
                                                                         Watermark="{DynamicResource Watermark.ParameterKey}" />
                                                                <TextBox Grid.Column="1"
                                                                         Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                                         Watermark="{DynamicResource Watermark.ParameterValue}" />
                                                                <Button Grid.Column="2"
                                                                        Classes="ghost"
                                                                        Content="{DynamicResource Button.Remove}"
                                                                        Command="{Binding DataContext.RemoveCapabilityParameterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                        CommandParameter="{Binding}" />
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <StackPanel Orientation="Horizontal" Spacing="10">
                                                    <Button Content="{DynamicResource Button.AddParameter}"
                                                            Classes="outline"
                                                            Command="{Binding AddCapabilityParameterCommand}" />
                                                    <TextBlock Text="{DynamicResource Hint.CapabilityParameters}"
                                                               FontSize="11"
                                                               Foreground="#7A8199"
                                                               VerticalAlignment="Center"
                                                               IsVisible="{Binding ShowCapabilityParameterHint}" />
                                                </StackPanel>
                                            </StackPanel>

                                            <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="{DynamicResource Label.Prompt}" IsVisible="{Binding IsSelectedCapabilityLanguageModel}" />
                                            <TextBox Grid.Row="4"
                                                     Grid.Column="1"
                                                     AcceptsReturn="True"
                                                     Height="160"
                                                     TextWrapping="Wrap"
                                                     Text="{Binding SelectedPromptRule.Prompt, UpdateSourceTrigger=PropertyChanged}"
                                                     IsVisible="{Binding IsSelectedCapabilityLanguageModel}"
                                                     IsEnabled="{Binding IsSelectedCapabilityLanguageModel}" />

                                            <Button Grid.Row="5"
                                                    Grid.Column="1"
                                                    Content="{DynamicResource Button.SaveRule}"
                                                    Command="{Binding SavePromptRulesCommand}"
                                                    Background="#4C6EF5"
                                                    Foreground="White"
                                                    Padding="18,10"
                                                    FontWeight="SemiBold"
                                                    HorizontalAlignment="Left"
                                                    IsEnabled="{Binding CanSavePromptRule}" />
                                        </Grid>

                                        <Border Grid.Row="1"
                                                Background="#F6F8FF"
                                                CornerRadius="10"
                                                Padding="16"
                                                IsVisible="{Binding NoPromptRuleSelected}">
                                            <TextBlock Text="{DynamicResource Rule.EmptyHint}"
                                                       FontSize="13"
                                                       Foreground="#5C6480" />
                                        </Border>
                                    </Grid>
                                </Border>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</Window>
